{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": ["esnext", "es2015", "es2016", "es2017", "es2018"],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["**/*.spec.ts"]
}
